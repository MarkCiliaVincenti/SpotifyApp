<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:viewModels="clr-namespace:SpotifyApp.Shared.ViewModels"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="SpotifyApp.Shared.Views.ProfileView">
    <Design.DataContext>
        <viewModels:ProfileViewModel/>
    </Design.DataContext>
    <Grid ColumnDefinitions="Auto, *"
          RowDefinitions="Auto, *">
        <Border ClipToBounds="True">
            <Panel Background="#7FFF22DD">
                <Image Width="200" Height="200" Stretch="Uniform" Source="{Binding  CurrentUser.Avatar}" />
            </Panel>
        </Border>
        <TextBlock Text="{Binding CurrentUser.UserProfile.DisplayName}"
                   Grid.Column="1"/>

        <ListBox Grid.Row="1" 
                 Grid.ColumnSpan="2"
                 Items="{Binding TopArtists}" 
                 Background="Transparent"
                 Margin="0 20">
            <ListBox.ItemsPanel>
                <ItemsPanelTemplate>
                    <WrapPanel />
                </ItemsPanelTemplate>
            </ListBox.ItemsPanel>
            <ListBox.ItemTemplate>
                <DataTemplate>
                    <StackPanel Spacing="5" Width="200">
                        <Border ClipToBounds="True">
                            <Panel Background="#7FFF22DD">
                                <Image Width="200" Stretch="Uniform" Source="{Binding Cover}" />
                            </Panel>
                        </Border>
                        <TextBlock Text="{Binding Artist.Name}" HorizontalAlignment="Center" />
                        <TextBlock Text="Artist" HorizontalAlignment="Center" />
                    </StackPanel>
                </DataTemplate>
            </ListBox.ItemTemplate>
        </ListBox>
    </Grid></UserControl>
